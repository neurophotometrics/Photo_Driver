#:import const const
#:kivy 1.10.1

  


<OnButton>:
  size:100,100
  text:"Active"
  canvas:
    Color:
      rgba: 1,.3,.8,.5
    Rectangle:
      pos:self.pos
      size:self.size

<ModeButton>:
  size:100,100
  canvas:
    Color:
      rgba: 1,.3,.8,.5
    Rectangle:
      pos:self.pos
      size:self.size

<DriverLayout>:
  onButton: on_button 
  constButton: const_button
  trig1Button: trig1_button
  fpsSlider: fps_slider
  slider560: slider_560
  slider470: slider_470
  slider415: slider_415 
  logo: brain_logo

  OnButton:
    id: on_button
    x: root.x
    controller: root.controller
    state:"normal"
    center_y: root.center_y
    on_press: self.press_power()

  Label: 
    font_size: 18
    x: root.x + 7
    center_y: root.center_y + 70
    text: "Mode: " + root.controller.mode
 
  ModeButton:
    id: const_button
    controller: root.controller
    x: root.x + 200
    state: "down"
    disabled: root.controller.active
    text:const.CONST
    mode:const.CONST
    group:"mode"
    center_y: root.center_y
    on_press: self.press_mode() 

  ModeButton:
    id: trig1_button
    x: root.x + 400
    disabled: root.controller.active
    state:"normal"
    controller: root.controller
    text:const.TRIG1    
    mode:const.TRIG1
    group:"mode"
    center_y: root.center_y
    on_press: self.press_mode()

  ModeButton:
    id: trig2_button
    x: root.x + 600
    controller: root.controller
    disabled: root.controller.active
    state:"normal"
    text:const.TRIG2    
    mode:const.TRIG2
    group:"mode"
    center_y: root.center_y
    on_press: self.press_mode()

  Slider:
    id: fps_slider
    disabled: root.controller.active
    min: const.MINFPS
    max: const.MAXFPS
    value: const.INITFPS
    on_value: root.controller.FPS = self.value
    orientation: "vertical"
    x: root.x + 200
    center_y: root.height - 100    
  
  Label:
    font_size: 20
    x: root.x + 200
    center_y: root.height - 50
    text: "FPS: " + str(round(root.fpsSlider.value,2))
 
  Slider:
    id: slider_560
    disabled: root.controller.active
    min: const.MINPOT
    max: const.MAXPOT
    value: const.INITPOT
    orientation: "vertical"
    x: root.x + 350
    center_y: root.height - 100
 
  Label:
    font_size: 20
    x: root.x + 350
    center_y: root.height - 50
    text: "560: " + str(round(root.slider560.value,2))

  Slider:
    id: slider_470
    disabled: root.controller.active
    min: const.MINPOT
    max: const.MAXPOT
    value: const.INITPOT
    orientation: "vertical"
    x: root.x + 500
    center_y: root.height - 100
  
  Label:
    font_size: 20
    x: root.x + 500
    center_y: root.height - 50
    text: "470: " + str(round(root.slider470.value,2))

  Slider:
    id: slider_415
    disabled: root.controller.active
    min: const.MINPOT
    max: const.MAXPOT
    value: const.INITPOT
    orientation: "vertical"
    x: root.x + 650
    center_y: root.height - 100
  
  Label:
    font_size: 20
    x: root.x + 650
    center_y: root.height - 50
    text: "415: " + str(round(root.slider415.value,2))

  Image: 
    id: brain_logo
    source: "NPMLogo.png" 
    size: 150,150
    x: root.x
    center_y: root.height - 100 


