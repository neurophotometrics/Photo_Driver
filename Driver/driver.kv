#:import const const
#:kivy 1.10.1

  


<OnButton>:
  size:100,100
  text:"Active"
  canvas:
    Color:
      rgba: 1,.3,.8,.5
    Rectangle:
      pos:self.pos
      size:self.size

<ModeButton>:
  size:100,100
  canvas:
    Color:
      rgba: 1,.3,.8,.5
    Rectangle:
      pos:self.pos
      size:self.size

<DriverLayout>:
  onButton: on_button 
  constButton: const_button
  trig1Button: trig1_button
  fpsSlider: fps_slider
  logo: brain_logo


  #GridLayout:
  #  size: root.size
  #  rows: 2

  OnButton:
    id: on_button
    x: root.x
    controller: root.controller
    state:"normal"
    center_y: root.center_y
    on_press: self.press_power()

  Label: 
    font_size: 18
    x: root.x + 7
    center_y: root.center_y + 70
    text: "Mode: " + root.controller.mode
 
  ModeButton:
    id: const_button
    controller: root.controller
    x: root.x + 200
    state: "down"
    disabled: root.controller.active
    text:const.CONST
    mode:const.CONST
    group:"mode"
    center_y: root.center_y
    on_press: self.press_mode() 

  ModeButton:
    id: trig1_button
    x: root.x + 400
    disabled: root.controller.active
    state:"normal"
    controller: root.controller
    text:const.TRIG1    
    mode:const.TRIG1
    group:"mode"
    center_y: root.center_y
    on_press: self.press_mode()

  ModeButton:
    id: trig2_button
    x: root.x + 600
    controller: root.controller
    disabled: root.controller.active
    state:"normal"
    text:const.TRIG2    
    mode:const.TRIG2
    group:"mode"
    center_y: root.center_y
    on_press: self.press_mode()

  Slider:
    id: fps_slider
    #controller: root.controller
    disabled: root.controller.active
    min: 1
    max: 4
    value: 2
    on_value: root.controller.FPS = self.value
    orientation: "vertical"
    x: root.x + 200
    center_y: root.height - 100    
  
  Label:
    font_size: 20
    x: root.x + 200
    center_y: root.height - 50
    text: "FPS: " + str(round(root.fpsSlider.value,2))


  Image: 
    id: brain_logo
    source: "NPMLogo.png" 
    size: 150,150
    x: root.x
    center_y: root.height - 100 


